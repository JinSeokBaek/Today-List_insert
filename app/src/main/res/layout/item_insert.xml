<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_item_insert"
    android:longClickable="true"
    android:clickable="true"
    android:id="@+id/ll_item"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <LinearLayout
            android:id="@+id/llshow"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            >
            <Button
            android:id="@+id/btnDel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="삭제"
            android:layout_weight="1"
            android:textColor="#000"
            android:background="@drawable/shape_del"/>
            <Button
                android:id="@+id/btnModi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:layout_weight="1"
                android:textColor="#000"
                android:background="@drawable/shape_del"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvcontext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="test"
            />
        <CheckBox
            android:id="@+id/cb_insert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnShow_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="▶"
        android:background="#0FFF"/>
    <LinearLayout
        android:id="@+id/ll_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tvcontext_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:textColor="#000"
            android:textSize="15sp"
            />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvdate"/>
    </LinearLayout>
</LinearLayout>