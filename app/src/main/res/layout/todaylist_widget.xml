<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llgood"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="#c7ff99"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:clickable="true"
                android:id="@+id/tvDate_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="date"
                android:textSize="30sp"
                android:textColor="#000"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:background="@drawable/shape_item_insert">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:text="해야할 일 : "
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/tvC"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
                <Button
                    android:id="@+id/btnRefresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="새로고침"
                    android:textColor="#2ff"
                    android:background="@drawable/shape_del"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:text="한 일 : "
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/tvT"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:text="안 한 일 : "
                    android:gravity="right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/tvF"
                    android:layout_width="0dp"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"/>
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llbad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <Button
            android:id="@+id/btnRefresh2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로고침"
            android:textColor="#2ff"
            android:background="@drawable/shape_del"/>
        <TextView
            android:id="@+id/tvbad"
            android:textColor="#f00"
            android:text="오늘 체크 리스트가 없습니다."
            android:gravity="center"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_widget">
    </ListView>
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>